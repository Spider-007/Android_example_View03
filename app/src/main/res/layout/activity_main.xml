<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入要保存的数据" />

    <Button
        android:id="@+id/CreateTabBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="建表"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/addSqBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="Add Data"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="20sp" />

    <Button
        android:id="@+id/updateSqBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="Update Data"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="20sp" />

    <Button
        android:id="@+id/inquireSqBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="Inquire Data"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="20sp" />

    <Button
        android:id="@+id/daleteSqBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="Delete Data"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="20sp" />


    <Button
        android:id="@+id/litepalBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="LitePal"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="20sp" />


</LinearLayout>